{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "rules": {
    "react/react-in-jsx-scope": "off",
    "complexity": [
      "error",
      5
    ],
    "max-statements": [
      "error",
      10
    ],
    "max-nested-callbacks": [
      "error",
      2
    ],
    "react/prefer-stateless-function": [
      "error"
    ],
    "react/prop-types": [
      "error",
      {
        "ignore": [
          "children",
          "context",
          "className"
        ]
      }
    ]
  }
}
